{
  "name": "color-ui-vue",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "repository": "color-ui-vue/color-ui-vue",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "play:vue3": "pnpm --filter vue3",
    "build": "pnpm --filter color-ui-vue build",
    "story:dev": "pnpm --filter color-ui-vue story:dev",
    "story:build": "pnpm --filter color-ui-vue story:build",
    "docs": "pnpm --filter docs",
    "docs:gen": "pnpm --filter color-ui-vue build && pnpm --filter color-ui-vue story:build && pnpm --filter docs docs:gen",
    "pk:update": "pnpm --filter color-ui-vue build && cd packages/color-ui-vue/ && npm publish"
  },
  "keywords": [],
  "author": "Theo Rodriguez",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
